# API Configuration
ETHERSCAN_API_KEY=YourEtherscanApiKeyHere

# Telegram Configuration (Optional - Global defaults)
TELEGRAM_BOT_TOKEN=YourTelegramBotTokenHere
TELEGRAM_CHAT_ID=YourTelegramChatIdHere

# Email Configuration (Optional - Global defaults)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENT=recipient@example.com

# Multi-Wallet Configuration - Choose ONE method below:

# Method 1: JSON Configuration (Recommended for multiple wallets)
# WALLETS_JSON={"trading":{"address":"0x742d35Cc6634C0532925a3b8D4C9db96C4b4Db45","name":"Trading Wallet","enabled":true},"savings":{"address":"0x1234567890123456789012345678901234567890","name":"Savings Wallet","enabled":true,"telegram_chat_id":"987654321"}}

# Method 2: Individual Wallet Environment Variables
WALLET_1_ADDRESS=0x742d35Cc6634C0532925a3b8D4C9db96C4b4Db45
WALLET_1_NAME=Trading Wallet
WALLET_1_ENABLED=true

WALLET_2_ADDRESS=0x1234567890123456789012345678901234567890
WALLET_2_NAME=Savings Wallet
WALLET_2_ENABLED=true
WALLET_2_TELEGRAM_CHAT_ID=987654321

# Method 3: Single Wallet (Backward Compatibility)
# WALLET_ADDRESS=0xYourWalletAddressHere

# Advanced Configuration (Optional)
CHECK_INTERVAL=600
BALANCE_CHANGE_THRESHOLD=0.1
