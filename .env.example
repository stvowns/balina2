# API Configuration
ETHERSCAN_API_KEY=YourEtherscanApiKeyHere

# Telegram Configuration (Optional - Global defaults)
TELEGRAM_BOT_TOKEN=YourTelegramBotTokenHere
TELEGRAM_CHAT_ID=YourTelegramChatIdHere

# Email Configuration (Optional - Global defaults)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENT=recipient@example.com

# Multi-Wallet Configuration - Choose ONE method below:

# Method 1: Individual Environment Variables (Recommended)
# WALLET_1_ADDRESS=0xYourWalletAddressHere
# WALLET_1_NAME=Your Wallet Name
# WALLET_1_ENABLED=true

# WALLET_2_ADDRESS=0xYourSecondWalletAddress
# WALLET_2_NAME=Second Wallet Name
# WALLET_2_ENABLED=true

# Method 3: Single Wallet (Backward Compatibility)
# WALLET_ADDRESS=0xYourWalletAddressHere

# Advanced Configuration (Optional)
CHECK_INTERVAL=600
BALANCE_CHANGE_THRESHOLD=0.1
POSITION_CHANGE_THRESHOLD=1000
